extends ../../admin/layout

block content
  .container
    .row.edit-warp
      form.form-horizontal(method="post", action="/admin/movie/new", style="width:100%")
        input(type="hidden", name="movie[_id]", value="#{movie._id}")
        //- 隐藏表单域，用来更新电影数据，存储电影ID
        .form-group
          label.col-sm-2.control-label(for="inputTitle") 电影名称
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[title]", value="#{movie.title}", placeholder="输入正确电影名称")
        .form-group
          label.col-sm-2.control-label(for="inputDoctor") 电影导演
          .col-sm-10
            input#inputDoctor.form-control(type="text", name="movie[doctor]", value="#{movie.doctor}", placeholder="输入正确电影导演")
        .form-group
          label.col-sm-2.control-label(for="inputCountry") 国家
          .col-sm-10
            input#inputCountry.form-control(type="text", name="movie[country]", value="#{movie.country}", placeholder="输入正确国家")
        .form-group
          label.col-sm-2.control-label(for="inputLanguage") 语种
          .col-sm-10
            input#inputLanguage.form-control(type="text", name="movie[language]", value="#{movie.language}", placeholder="输入正确语种")
        //- .form-group
        //-   label.col-sm-2.control-label(for="inputPoster") 海报地址
        //-   .col-sm-10
        //-     input#inputPoster.form-control(type="text", name="movie[poster]", value="#{movie.poster}", placeholder="输入正确的并且可显示的海报地址")
        .form-group
          label.col-sm-2.control-label(for="inputPoster") 海报地址
          .col-sm-10
            label(for="inputPoster")
              span.btn.btn-primary.poster(style="line-height:33px;width:auto") 选择海报
                input#inputPoster(type="file", name="movie[poster]",style="display:none")
        .form-group
          label.col-sm-2.control-label(for="inputFlash") 片源地址
          .col-sm-10
            input#inputFlash.form-control(type="text", name="movie[flash]", value="#{movie.flash}", placeholder="输入正确的并且可播放的资源地址")
        .form-group
          label.col-sm-2.control-label(for="inputYear") 上映年代
          .col-sm-10
            input#inputYear.form-control(type="text", name="movie[year]", value="#{movie.year}", placeholder="年代 请填写纯数字")
        .form-group
          label.col-sm-2.control-label(for="inputSummary") 电影简介
          .col-sm-10
            textarea#inputSummary.form-control(name="movie[summary]", value="#{movie.summary}", cols="3" placeholder="请填写完整的简介") #{movie.summary}
        .form-group
          .col-sm-offset-2.col-sm-10
          button.btn.btn-primary.btn-block.margin-top-30(type="submit") 数据提交
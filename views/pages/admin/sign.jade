extends ../../admin/login

block content
  link(href="/admin/css/login.css", rel="stylesheet")
  .login-full
    div.page-login-main
      div.login-warp
        div.avatar.avatar-100.margin-bottom-20
          img(src="http://cdn.admui.com/demo/pjax/1.3.0/images/portraits/1.jpg" alt="")
        .form-group.has-feedback
          select.form-control#userType
            each book in [{name:'管理员',val:999},{name:'游客',val:1},{name:'编辑者',val:2}]
              option(value=book.val) #{book.name}
        .form-group.has-feedback
          input#inputUser.form-control(type="text", name="userName", value="")
        .form-group.has-feedback
          input#inputPwd.form-control(type="text", name="userPwd", value="")
        .form-group.clearfix
          label.pull-left
            input#checkbox(type="checkbox")
          自动登录
          p.pull-right
            a.reg(href="") 注册账号 
            a.reg(href="") · 找回密码
        .form-group
          button.btn.btn-primary.btn-block.margin-top-30.login-bnt#sign 用户登录
